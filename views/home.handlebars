<div class="container">
  {{#each users}}
  <div class="item">
    <h2>{{this.name}}</h2>
    <p>{{user.occupation}}</p>
    <div class="actions">
      <a href="/users/{{this.id}}" class="details-btn">Ver Detalhes</a>
      <a href="/users/edit/{{this.id}}" class="edit-btn">Editat</a>
      <form action="/users/delete/{{this.id}}" method="POST">
        <input type="Submit" value="Excluir" class="delete-btn">
      </form>
    </div>
  </div>
  {{/each}}
</div>