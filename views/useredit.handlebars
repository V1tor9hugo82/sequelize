<h1>Editando:{{user.name}}</h1>
<!--Formulario de usuario-->
<form action="/users/update" method="POST" class="form">
  <input type="hidden" name="id" value="{{user.id}}">
  <!--Nome do usuário-->
  <div class="form-control">
    <label for="name">Nome:</label>
    <input type="text" name="name" placeholder="Digite o nome de Usuário" value="{{user.name}}">
  </div>
  <!--profissão-->
  <div class="form-control">
    <label for="occupation">Nome:</label>
    <input type="text" name="occupation" placeholder="Digite a profissão" value="{{user.occupation}}">
  </div>

  <!-- checkbox -->
  <div class="form-control form-checkbox">
    {{#if user.newsletter}}
    <input type="checkbox" name="newsletter" checked>
    {{else}}
    <input type="checkbox" name="newsletter">
    {{/if}}
    <label for="newsletter">Enviar Promoções?</label>
  </div>
  <input type="submit" value="Editar">
</form>
<!-- formulario de contato -->
<div class="address-container">
  <h2>Endereço:</h2>
  <form action="/address/create" method="POST">
    <input type="hidden" name="userId" value="{{user.id}}">
    <div class="form-control">
      <label for="street">Rua:</label>
      <input type="text" name="street" placeholder="Digite a rua">
    </div>

    <div class="form-control">
      <label for="number">Número:</label>
      <input type="text" name="number" placeholder="Digite o numero da residência">
    </div>

    <div class="form-control">
      <label for="city">Cidade:</label>
      <input type="text" name="city" placeholder="Digite a cidade">
    </div>
    <input type="submit" value="Incluir endereço">
  </form>
  <div class="address-list">
    <h2>Lista de endereços:</h2>
    {{#each user.addresses}}
    <div>
      #{{this.id}} -
      {{this.street}} -
      {{this.number}} -
      {{this.city}}
      <form action="address/delete" method="POST">
        <input type="hidden" name="id" value="{{this.UserId}}">
        <input type="hidden" name="id" value="{{this.id}}">
        <input type="submit" value="Excluir">
      </form>
    </div>
    {{/each}}
  </div>
</div>